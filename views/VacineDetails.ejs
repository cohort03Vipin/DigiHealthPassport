<html>
    <head>
        <title>Traveller</title>
        <!-- Bootstrap core CSS -->        
        <%- include('./partials/headscripts.ejs')%>        
    </head>
  <body>
    <%- include('./partials/navTraveller.ejs')%>
    <div class="container py-4">
        <br><br>

        <div id="VacineInfo" class="tabcontent py-3" style="display: block;">
            <div class="col-md-10 mb-10 border rounded">
                       <h2 class="py-3">Vaccine Details</h2>
                       <br>
                       <form method="POST" action="addVaccineDetails">                           
                           <div class="row">
                               <div class="form-group col-md-6 mb-6">
                                   <label for="tbxVaccineName">Vaccine Name</label>
                                   <input type="text" required class="form-control" id="tbxVaccineName" name="tbxVaccineName" 
                                   placeholder="Enter Your Vaccine Name">
                                </div>
                               <div class="form-group col-md-6 mb-6">
                                   <label for="tbxVaccineBrand">Vacine Brand</label>
                                   <input type="text" required class="form-control" id="tbxVaccineBrand" name="tbxVaccineBrand"
                                    placeholder="Enter Your Vaccine Brand"> 
                               </div>
                           </div>
                           <div class="row">
                                <div class="form-group col-md-6 mb-6">
                                    <label for="tbxVaccineDate">Vaccine Date</label>
                                    <input type="date" class="form-control" name="tbxVaccineDate">
                                </div>
            
                                <div class="form-group col-md-6 mb-6">
                                    <label for="tbxNextDosageDate">Next Dosage Date</label>
                                    <input type="date" class="form-control" name="tbxNextDosageDate">
                                </div>
                           </div>                             
                           <div class="row">
                            <div class="form-group col-md-12 mb-12">
                                <label for="txtCoolingInfo">Storage Details(Cooling Info)</label>
                                <textarea class="form-control" name="txtCoolingInfo" placeholder="Enter Your Storage Details" rows="3"></textarea>
                            </div>
                            
                          </div>
                          <div class="row ">               
                            <div class="form-group col-md-12 mb-2">
                                <label for="txtVacineId">Please input Vaccine Id(1-5)</label>
                                <input type="number" class="form-control" name="txtVacineId" min="0" max="5">
                            </div> 
                        </div>
                          <div class="row">                            
                            <div class="form-group col-md-12 mb-6">
                                <label for="txtTravellerId">Traveller Identity(Account Address)</label>
                                <input type="text" class="form-control" name="txtTravellerId" placeholder="Please input traveller address">
                             </div>                       
                       </div> 
                       <div class="row">
                        <div class="form-group col-md-6 mb-2">
                            <label for="tbxVaccineResult">Vaccine Results</label>
                            <textarea class="form-control" name="tbxVaccineResult" placeholder="Enter Your Vaccine Result on Traveller" rows="3"></textarea>
                         </div>
                         <div class="form-group col-md-6 mb-2">
                            <label for="tbxMedicleConditions">Medicle Conditions</label>
                            <textarea class="form-control" name="tbxMedicleConditions" placeholder="Enter Medical Conditions of Traveller" rows="3"></textarea>
                         </div>
                       </div>


                           <div class="row mb-4">
                            <div class="col-md-5 mb-10 text-left">
                            <a href="./hospitalizationDetails" class="btn btn-primary"  title="Please click on back button">Back</a>
                            </div>  
                           <div class="col-md-5 mb-10 text-right">
                               <button type="submit" class="btn btn-primary" id="btnSubmitBasic">Submit</button> 
                           </div>                               
                       </div>         
                       </form>            
            </div> 
       </div>
    </div>
    <%- include('./partials/footer.ejs')%>
           </body>
  </html>   