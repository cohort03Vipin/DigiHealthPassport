<html>
    <head>
        <title>History Details</title>
        <!-- Bootstrap core CSS -->        
        <%- include('./partials/headscripts.ejs')%>        
    </head>
  <body>
    <%- include('./partials/navTraveller.ejs')%>
    <div class="container py-4">
        <br><br>

        <div id="trvlrHistoryforCovid" class="tabcontent py-3" style="display: block;">
            <div class="col-md-10 mb-10 border rounded py-4">
                       <h2 class="py-3">Traveller Covid History Details</h2>
                       <br>                      
                       <form method="POST" action="addTravellerQuaratineHistory" >                                                     
                        <div class="row">
                            <div class="form-check col-md-6 mb-6">
                                <div class="my-2">  
                                    <label class="form-check-label">COVID Test Required</label>
                               </div>
                               <label class="form-check-label mx-5">
                                   <input type="radio" class="form-check-input" name="rdbtnCovidTestReqd">Yes
                                   </label>
                                   <label class="form-check-label mx-5">
                                       <input type="radio" class="form-check-input" name="rdbtnCovidTestReqd">No
                                    </label>
                           </div> 
                           <div class="form-group col-md-6 mb-6">
                            <div class="mb-2">  
                                <label class="form-check-label">Quarantine Type</label>
                            </div>

                          <label class="form-check-label mx-5">
                               <input type="radio" class="form-check-input" value="Institution" name="rdbtnQuaratineType">Institution
                               </label>

                               <label class="form-check-label mx-5">
                                   <input type="radio" class="form-check-input" value="Home" name="rdbtnQuaratineType">Home
                                </label>
                                <label class="form-check-label mx-5">
                                    <input type="radio" class="form-check-input" value="NA" name="rdbtnQuaratineType">NA
                                 </label>
                        </div>
                        </div>
                           
                        <div class="row"> 
                                                                                                    
                            <div class="form-group col-md-12 mb-12">
                                <div class="my-2">
                                    <label for="optQuaratineDuration">Quarantine Duration</label>                                
                                </div>
                                
                                    <select class="form-select form-control" name="optQuaratineDuration">                                    
                                        <option selected>Please Select</option>
                                        <option value="None">None</option>
                                         <option value="7 days">15 days</option>
                                        <option value="15 days">15 days</option>
                                        <option value="Greater than 15 Days">Greater than 15 Days</option>
                                        
                                      </select> 
                            </div>


                        </div>   
                        <div class="row">         
                            <div class="form-group col-md-12 mb-12">
                                <label for="selectPlaceOfStay">Place of Stay</label>
                                <select class="form-select form-control" name="selectPlaceOfStay">                                    
                                    <option selected>Please Select</option>
                                    <option value="Hotel">Hotel</option>
                                    <option value="Personal">Personal</option>
                                    <option value="Schools">Schools</option> 
                                    <option value="Institution">Institution</option>                                    
                                  </select> 
                            </div>       
                        </div>                       
                       
                       <div class="row">
                        <div class="form-group col-md-12 mb-12">
                            <label for="txtAddressStay">Address of Stay</label>
                            <textarea class="form-control" name="txtAddressStay" placeholder="Please provide your stay details" rows="3"></textarea>
                        </div></div>
                        <div class="row">
                        <div class="form-group col-md-12 mb-12">
                            <label for="txtCovidSymptoms">Any symptom of COVID observed?</label>
                            <textarea class="form-control" name="txtCovidSymptoms" placeholder="Brief about your symptoms" rows="3"></textarea>
                         </div>
                      </div> 
                      <div class="row">                            
                        <div class="form-group col-md-5 mb-5">
                            <label for="txtTravellerId">Traveller Identity(Account Address)</label>
                            <input type="text" class="form-control" name="txtTravellerId" placeholder="Please input traveller address">
                         </div>            
                        <div class="form-group col-md-7 mb-7">
                            <label for="txtTravellerHistoryIdPK">Please provide Travelled Iteration Count for which details is applicable</label>
                            <input type="number" class="form-control" name="txtTravellerHistoryIdPK" min="0" max="1">
                        </div>                              
                   </div>  
                      
                           <div class="row mb-4">
                           <div class="col-md-10 mb-10 text-right">
                               <button type="submit" class="btn btn-primary" id="btnSubmitBasic">Submit</button> 
                           </div>           
                       </div>         
                       </form>            
            </div> 
       </div>
    </div>
    <%- include('./partials/footer.ejs')%>
           </body>
  </html>