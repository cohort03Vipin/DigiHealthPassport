  <body>
    <%- include('./partials/navTraveller.ejs')%>
    <div class="container py-4">
        <br><br>

        <div id="trvlrHistoryforCovid" class="tabcontent py-3" style="display: block;">
            <div class="col-md-10 mb-10 border rounded py-4">
                       <h2 class="py-3">Traveller Covid History Details</h2>
                       <br>                      
                                                                        
                        <div class="row">
                            <div class="form-check col-md-3 mb-3">
                                <div class="my-2">  
                                    <label class="form-check-label">COVID Test Required</label> 
                               </div>
                               <label class="form-check-label mx-5">
                                <%if(covidTestRequired=="true") {%>   
                                Yes
                                <%} else {%>
                                   No
                                <%}%>
                                </label>
                           </div>                        
                           <div class="form-group col-md-4 mb-4">
                            <div class="my-2">
                                <label for="optQuaratineDuration">Quarantine Duration</label>                                
                            </div>
                            <label class="form-check-label mx-5">
                                <%=quarantineDuration%>
                               </label>
                            </div>

                            <div class="form-group col-md-3 mb-3">
                                <div class="my-2">
                                    <label for="selectPlaceOfStay">Place of Stay</label> 
                                    <label class="form-check-label mx-5">
                                        <%=placeofStay%>
                                       </label>
                            </div>
                            </div>
                        </div>    
                       
                       <div class="row">
                        <div class="form-group col-md-10 mb-10">
                            <label for="txtAddressStay">Address of Stay</label>
                            <textarea readonly class="form-control" name="txtAddressStay"  rows="3"><%=addressOfStay%></textarea>
                        </div>
                    </div>
                        <div class="row">
                        <div class="form-group col-md-10 mb-10">
                            <label for="txtCovidSymptoms">Any symptom of COVID observed?</label>
                            <textarea readonly class="form-control" name="txtCovidSymptoms" placeholder="Brief about your symptoms" rows="3"><%=anyCovidSymtpom%></textarea>
                         </div>
                      </div> 
