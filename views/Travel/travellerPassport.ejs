<html>
    <head>
        <title>Passport Details</title>
        <!-- Bootstrap core CSS -->        
        <%- include('./partials/headscripts.ejs')%>        
    </head>
  <body>
    <%- include('./partials/navTraveller.ejs')%>
    <div class="container py-4">
        <br><br>
    
    <div id="trvlrPassport" class="py-3">
          <div class="col-md-10 mb-10 border rounded">
                  <h2 class="py-3">Traveller Passport Details</h2>
                  <br>               
                  <form method="POST" action="addPassport" enctype="multipart/form-data"> 
                        <div class="row">
                            <div class="form-group col-md-6 mb-6">
                                <label for="tbxPassportNo">Passport No</label>
                                <input type="text" class="form-control" name="tbxPassportNo" placeholder="Enter Your Passport No.">
                            </div>
                            <div class="form-group col-md-6 mb-6">
                                <label for="tbxPlaceOfBirth">Birth Place</label>
                                <input type="text" class="form-control" name="tbxPlaceOfBirth" placeholder="Enter Your Birth Place">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6 mb-6">
                                <label for="tbxValidityFrom">Passport Validity From</label>
                                <input type="date" class="form-control" name="tbxValidityFrom">
                             </div>
        
                            <div class="form-group col-md-6 mb-6">
                                <label for="tbxValidityTo">Passport Validity To</label>
                                <input type="date" class="form-control" name="tbxValidityTo">
                            </div>
                        </div>
                        <div class="row"> 
                            <div class="form-group col-md-6 mb-6">
                                <label for="selectNationality">Nationality</label>
                                <select class="form-select form-control" name="selectNationality">                                    
                                     <option selected>Please Select</option>
                                     <option value="India">India</option>
                                     <option value="Pakistan">Pakistan</option>
                                     <option value="Nepal">Nepal</option>
                                     <option value="British">British</option>
                                     <option value="Argentinian">Argentinian</option>
                                     <option value="Brazilian">Brazilian</option>
                                      <option value="Canadian">Canadian</option>
                                      <option value="Chinese">Chinese</option>
                                     <option value="French">French</option>
                                     <option value="German">German</option>
                                     
                                   </select> 
                            </div>
                             <div class="form-group col-md-6 mb-6">
                                <label for="tbxAuthority">Issuing Authority</label>
                                <input type="text" class="form-control" name="tbxAuthority">
                             </div>
                        </div>
                       
                        <div class="form-group"> 
                            <label for="uploadPassport">Please Upload Passport</label>
                            <input type="file" required class="form-control-file" name="uploadPassport">
                        </div>
                        <div class="row mb-4">
                            <div class="col-md-10 mb-10 text-right">
                                <button type="submit" class="btn btn-primary ">Submit</button> 
                            </div> 
                        </div> 
                      </form> 
            </div> 
    </div>
    </div>
    <%- include('./partials/footer.ejs')%>
        </body>
  </html>